<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="fas fa-edit me-2"></i>Modifier le profil de <%= @user.full_name %>
          </h5>
        </div>
        <div class="card-body">
          <%= simple_form_for @user, url: profile_path(@user), method: :patch do |f| %>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :first_name, required: true %>
              </div>
              <div class="col-md-6">
                <%= f.input :last_name, required: true %>
              </div>
            </div>

            <%= f.input :email, required: true %>
            <%= f.input :phone %>
            <%= f.input :birth_date, as: :date, html5: true %>

            <div class="d-flex justify-content-between">
              <%= link_to profile_path(@user), class: "btn btn-outline-secondary" do %>
                <i class="fas fa-arrow-left me-2"></i>Annuler
              <% end %>
              <%= f.button :submit, "Mettre Ã  jour", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
