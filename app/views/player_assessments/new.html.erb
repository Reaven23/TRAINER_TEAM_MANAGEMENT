<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card">
        <div class="card-header bg-success text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
              <i class="fas fa-clipboard-check me-2"></i>Nouveau bilan de compétences
            </h5>
            <%= link_to profile_path(@user), class: "btn btn-light btn-sm" do %>
              <i class="fas fa-arrow-left me-2"></i>Retour au profil
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row mb-4">
            <div class="col-12 text-center">
              <h4><%= @user.full_name %></h4>
              <p class="text-muted">Création d'un nouveau bilan de compétences</p>
            </div>
          </div>

          <%= simple_form_for [@user, @assessment], html: { class: 'assessment-form' } do |f| %>
            <div class="row">
              <div class="col-md-4">
                <%= f.input :key_skills,
                            label: 'Compétences clés à travailler',
                            placeholder: 'Listez les compétences principales que le joueur doit développer...',
                            input_html: { rows: 6, class: 'form-control' },
                            hint: 'Ex: Dribble, Passe, Tir, Défense...' %>
              </div>
              <div class="col-md-4">
                <%= f.input :areas_to_improve,
                            label: 'Axes d\'amélioration',
                            placeholder: 'Détaillez les points à améliorer...',
                            input_html: { rows: 6, class: 'form-control' },
                            hint: 'Ex: Vitesse, Endurance, Technique...' %>
              </div>
              <div class="col-md-4">
                <%= f.input :coach_notes,
                            label: 'Notes de l\'entraîneur',
                            placeholder: 'Observations et recommandations...',
                            input_html: { rows: 6, class: 'form-control' },
                            hint: 'Ex: Progression, Objectifs, Conseils...' %>
              </div>
            </div>

            <div class="text-center mt-4">
              <%= f.button :submit, 'Créer le bilan', class: 'btn btn-success btn-lg me-3' %>
              <%= link_to 'Annuler', profile_path(@user), class: 'btn btn-outline-secondary btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
