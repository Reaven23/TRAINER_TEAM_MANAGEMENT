<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="col-12 col-sm-8 col-md-6 col-lg-4">
    <div class="card shadow-sm password-edit-page">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Changer le mot de passe</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.input :password, required: true, input_html: { class: 'form-control' } %>
          <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>
          <div class="d-grid gap-2">
            <%= f.button :submit, "Changer le mot de passe", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
        <div class="mt-3 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
